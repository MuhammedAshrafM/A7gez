<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/progress"
        android:bottom="15dp"
        android:left="15dp"
        android:right="15dp"
        android:top="15dp"
        android:width="70dp"
        android:height="70dp">
        <layer-list>
            <item>
                <shape android:shape="oval"
                    android:gravity="center">
                    <size
                        android:width="80dp"
                        android:height="80dp" />
                    <stroke
                        android:width="2dp"
                        android:color="@color/colorPrimary" />

                    <solid android:color="@color/fui_bgGoogle" />
                </shape>
            </item>
            <item
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"
                android:width="60dp"
                android:height="60dp"
                android:gravity="center">
                <rotate
                    android:fromDegrees="0"
                    android:pivotX="50%"
                    android:pivotY="50%"
                    android:toDegrees="180">
                    <shape android:shape="oval"
                        android:thickness="1dp"
                        android:tint="@color/test">
                        <size
                            android:width="80dp"
                            android:height="80dp" />
                        <stroke
                            android:width="2dp"
                            android:color="@color/fui_bgTwitter" />
                    </shape>
                </rotate>
            </item>
            <item
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"
                android:width="60dp">
                <rotate
                    android:fromDegrees="0"
                    android:pivotX="50%"
                    android:pivotY="50%"
                    android:toDegrees="180">
                    <shape android:shape="line">
                        <stroke
                            android:width="1dp"
                            android:color="@color/fui_bgPhone" />
                    </shape>
                </rotate>
            </item>
            <item
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"
                android:width="60dp">
                <rotate
                    android:fromDegrees="270"
                    android:pivotX="50%"
                    android:pivotY="50%"
                    android:toDegrees="90">
                    <shape android:shape="line">
                        <stroke
                            android:width="1dp"
                            android:color="@color/colorAccent" />
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>

</layer-list>