<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tableAvailable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:drawablePadding="5dp"
            android:drawableEnd="@android:drawable/presence_online"
            android:drawableTint="@color/green"
            android:textSize="20dp"
            android:text="Available"
            android:textColor="@android:color/black"
            tools:ignore="RtlCompat"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tableUnavailable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:drawablePadding="5dp"
            android:drawableEnd="@android:drawable/presence_online"
            android:drawableTint="@color/red"
            android:textSize="20dp"
            android:text="unavailable"
            android:textColor="@android:color/black"
            tools:ignore="RtlCompat"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/seatsNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:text="One Seating"
            android:textColor="@android:color/black"/>
    </LinearLayout>


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:background="@drawable/ic_action_arrow_right"/>
</LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:background="@android:color/darker_gray">

    </View>
</LinearLayout>